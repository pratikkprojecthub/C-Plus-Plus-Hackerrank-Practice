#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;

// Start of the code
int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */   
    int num;
    int num2;
    cin >> num >> num2;
    vector<int> a[num];
    for(int i = 0; i < num; i++){
        int num3;
        cin >> num3;
        int o;
        for(int j = 0; j < num3; j++){
            cin >> o;
            a[i].push_back(o);
        }
    }
    
    int n1, n2, temp;
    for( temp = 1; temp <= num2; temp++){
        cin >> n1 >> n2;
        cout << a[n1][n2] << endl;
    }
    return 0;
}
// End of the code
